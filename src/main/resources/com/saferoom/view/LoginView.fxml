<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<!-- Ana Konteyner: StackPane, elemanları üst üste yığarak ortalamayı kolaylaştırır -->
<StackPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" styleClass="login-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.controller.LoginController">
    <children>
        <!-- Giriş Paneli: VBox, elemanları dikey olarak sıralar -->
        <VBox fx:id="rootPane" alignment="CENTER" maxHeight="550.0" maxWidth="450.0" spacing="30.0" styleClass="login-pane">
            <children>
                <!-- Logo ve Başlık Alanı -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <StackPane prefHeight="112.0" prefWidth="112.0">
                            <children>
                                <!-- SVG İkonu: React'teki logonun aynısı -->
                                <SVGPath content="M12 2L2 7V17L12 22L22 17V7L12 2Z M16.5 8C16.5 10 15 11 12 12C9 13 7.5 14 7.5 16" styleClass="logo-icon" />
                            </children>
                        </StackPane>
                        <Label styleClass="title-label" text="Welcome Back" />
                        <Label styleClass="subtitle-label" text="Sign in to continue to SafeRoom" />
                    </children>
                </VBox>
                <!-- Kullanıcı Adı ve Şifre Alanı -->
                <VBox spacing="15.0">
                    <children>
                        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" prefWidth="250" />
                        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" prefWidth="250" />
                    </children>
                </VBox>
                <!-- Giriş Butonu -->
                <Button fx:id="signInButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="400.0" styleClass="login-button" text="Sign In" />
                <!-- Kayıt Ol Linki -->
                <HBox alignment="CENTER">
                    <children>
                        <Label styleClass="footer-label" text="Don't have an account? " />
                        <Hyperlink fx:id="signUpLink" styleClass="signup-link" text="Sign Up" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </children>
</StackPane>
